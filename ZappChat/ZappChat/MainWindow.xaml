<Window x:Class="ZappChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowStyle="None"
		AllowsTransparency="True" Background="Transparent" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Height="691" Width="1040"
		ResizeMode="NoResize">
	<Border x:Name="border" CornerRadius="10" Background="#FFE0E0E0" Width="1024" Height="674">
		<DockPanel x:Name="mainStack" >
			<StackPanel x:Name="leftPanel" DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Top" Height="674" Width="394">
				<StackPanel Height="105" Width="{Binding Width, ElementName=leftPanel}" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top"/>
				<StackPanel Width="{Binding Width, ElementName=leftPanel}" Height="100"/>
			</StackPanel>
		</DockPanel>
		
	</Border>

</Window>
