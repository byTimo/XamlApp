<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ZappChat.Controls">
    <Style TargetType="{x:Type local:ChatMessage}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ChatMessage}">
                    <Grid Background="{TemplateBinding Background}">
                    	<Grid.RowDefinitions>
                    		<RowDefinition Height="Auto"/>
                    		<RowDefinition Height="*"/>
                    	</Grid.RowDefinitions>
						<TextBox Grid.Row="0" Text="{TemplateBinding AuthorMessage}" Margin="{TemplateBinding Margin}" HorizontalAlignment="{TemplateBinding HorizontalAlignment}" Background="{x:Null}" BorderThickness="0" BorderBrush="{x:Null}" IsReadOnly="True" FontFamily="/ZappChat;component/Fonts/#Arial" FontSize="13.333" Foreground="#FF2FB6E5"/>
                        <TextBox Grid.Row="1" Text="{TemplateBinding TextMessage}" Margin="{TemplateBinding Margin}" HorizontalAlignment="{TemplateBinding HorizontalAlignment}" Background="{x:Null}" BorderThickness="0" BorderBrush="{x:Null}" IsReadOnly="True" TextWrapping="Wrap" FontFamily="/ZappChat;component/Fonts/#Arial" FontSize="18.667"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
