<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- Здесь необходимо определить записи словаря ресурсов. -->
	<Style x:Key="MessageButton" TargetType="{x:Type Button}">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Grid>
							<Rectangle Fill="#FF1FB6E4" RadiusX="15" RadiusY="15" Stroke="#FF64CEEE" StrokeThickness="2"/>
							<StackPanel x:Name="stackPanel" HorizontalAlignment="Stretch" Height="{Binding Height, ElementName=stackPanel}" VerticalAlignment="Stretch" Width="{Binding Width, ElementName=stackPanel}" Orientation="Horizontal">
								<TextBlock HorizontalAlignment="Center" Height="Auto" Margin="15,0,0,0" TextWrapping="Wrap" Text="Сообщения" VerticalAlignment="Center" Width="Auto" FontSize="17.333" FontFamily="Arar" Foreground="White"/>
							</StackPanel>
						</Grid>
						<ControlTemplate.Triggers>
							<Trigger Property="IsFocused" Value="True"/>
							<Trigger Property="IsDefaulted" Value="True"/>
							<Trigger Property="IsMouseOver" Value="True"/>
							<Trigger Property="IsPressed" Value="True"/>
							<Trigger Property="IsEnabled" Value="False"/>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
</ResourceDictionary>