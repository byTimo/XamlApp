<Window x:Class="ZappChat.ServerEmulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ServerEmulation" Height="367" Width="536">
    <Grid>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Disconnect" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Send Message" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
        <TextBox x:Name="author" HorizontalAlignment="Left" Height="23" Margin="102,60,0,0" TextWrapping="Wrap" Text="Author" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="message" HorizontalAlignment="Left" Height="23" Margin="227,60,0,0" TextWrapping="Wrap" Text="Message" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
